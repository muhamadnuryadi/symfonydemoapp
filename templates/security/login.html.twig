{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <div class="account-wall">
        <form action="{{ path('login') }}" method="post" class="form-signin">

        <h2>Login</h2>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="formgroup" style="margin-top:20px;">
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="username" />
        </div>
        
        <div class="formgroup" style="margin-top:20px;">
            <input type="password" class="form-control" id="password" name="_password" placeholder="password" />
        </div>

        <div class="formgroup" style="margin-top:20px;">
            <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Login" />
        </div>
        </form>
        </div>
    </div>
</div>

{% endblock %}